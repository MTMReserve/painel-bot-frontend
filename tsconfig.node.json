{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "types": ["node"],
    "composite": true,
    "resolveJsonModule": true,

    /* ðŸ”§ Alias para scripts Node usando o back-end */
    "baseUrl": ".",
    "paths": {
      "@server/*": ["src/server/*"]
    }
  },
  "include": ["src/server"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
